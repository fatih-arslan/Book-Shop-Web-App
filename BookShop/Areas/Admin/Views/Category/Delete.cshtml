@model Category

@{
	ViewData["Title"] = "Delete Category";
}

<div class="card shadow border-0 mt-4 mx-4">
	<div class="card-header bg-secondary bg-gradient">
		<div class="row">
			<div class="col-12 text-center">
				<h4 class="text-white">Delete Category</h4>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<div class="border p-3 mt-4">				
				<div class="form-floating py-2 col-12">
					<input asp-for="Name" disabled class="form-control border-0 shadow" />
					<label asp-for="Name" disabled class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
					<label asp-for="DisplayOrder" disabled class="ms-2"></label>
				</div>
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
							Back to List
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


